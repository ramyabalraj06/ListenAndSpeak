<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mytextandspeech.com.mytextandspeech">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Text Speech"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Listen And Speak System" />
        <activity
            android:name=".HomeActivity"
            android:label="Listen And Speak"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TemplateActivity"
            android:label="Template"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Register"
            android:label="Registration"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".ViewtemplateActivity"
            android:label="Help"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RecycleviewActivity"
            android:label="Recyclerview" />

    </application>

</manifest>